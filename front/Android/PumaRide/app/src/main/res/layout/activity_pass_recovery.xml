<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/unam"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="30dp"
            android:gravity="center"
            style="@style/input"
            android:hint="Correo@comunidad.unam.mx"
            android:id="@+id/user" />

        <LinearLayout android:id="@+id/act_login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#2a3961"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recuperar ContraseÃ±a"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="8dp"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/activity_pass_recovery_cancel"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Cancelar"
                android:paddingLeft="6dp"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

