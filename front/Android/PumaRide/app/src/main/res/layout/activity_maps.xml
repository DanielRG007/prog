<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unam.alex.pumaride.MapsActivity" >
    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/activity_maps_rv_days"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        fab:menu_icon="@drawable/ic_directions_walk_white_24dp"
        fab:menu_colorNormal="@color/colorWalk"
        fab:menu_colorPressed="@color/colorWalk"
        fab:menu_colorRipple="@color/colorWalk">

        <com.github.clans.fab.FloatingActionButton
            fab:fab_colorNormal="@color/colorWalk"
            fab:fab_colorPressed="@color/colorWalk"
            fab:fab_colorRipple="@color/colorWalk"
            android:id="@+id/app_bar_main_menu_item_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_walk_white_24dp"
            fab:fab_size="mini"
            fab:fab_label="A Pie" />
        <com.github.clans.fab.FloatingActionButton
            fab:fab_colorNormal="@color/colorBike"
            fab:fab_colorPressed="@color/colorBike"
            fab:fab_colorRipple="@color/colorBike"
            android:id="@+id/app_bar_main_menu_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bike_white_24dp"
            fab:fab_size="mini"
            fab:fab_label="Bicicleta" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/app_bar_main_menu_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_car_white_24dp"
            android:tag="1"
            fab:fab_size="mini"
            fab:fab_label="AutomÃ³vil"
            map:fab_colorNormal="@color/orange_primary_color"
            map:fab_colorPressed="@color/orange_primary_color"
            map:fab_colorRipple="@color/orange_primary_color" />

    </com.github.clans.fab.FloatingActionMenu>
</fragment>
