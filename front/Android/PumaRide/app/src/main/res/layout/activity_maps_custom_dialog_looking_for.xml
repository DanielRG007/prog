<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_content"
    android:padding="10dp"
    android:id="@+id/custom_dialog_content"
    android:orientation="vertical">
    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="BallPulseIndicator"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Buscando posible acompaÃ±ante..."/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/custom_dialog_button_cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_cancel_button"
            android:backgroundTint="@color/colorCar"
            android:textSize="13dp"
            android:layout_marginRight="4dp"
            android:text="X"
            android:textColor="#000" />
    </LinearLayout>
</LinearLayout>