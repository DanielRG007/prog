<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_content"
    android:padding="10dp"
    android:id="@+id/custom_dialog_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Buscando posible acompaÃ±ante..."
            android:layout_marginTop="60dp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            app:indicatorColor="@android:color/white"
            app:indicatorName="BallScaleMultipleIndicator"
            android:id="@+id/view"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/activity_maps_custom_dialog_looking_for_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/custom_dialog_button_cancel"
            android:layout_alignEnd="@+id/custom_dialog_button_cancel" />
        <ImageButton
            android:id="@+id/custom_dialog_button_cancel"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_cancel_black_24px"
            android:layout_gravity="center"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textColor="@color/blue_gray_light_primary_color"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView" />
</RelativeLayout>